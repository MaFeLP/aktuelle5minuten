<div id="tinder-card" class="card" draggable="true">
    <img
        class="card-img-top"
        src="{{figure_src}}"
        alt="{{figure_alt}}"
        srcset="{{figure_srcset}}"
        title="{{figure_title}}"
        draggable="false"
    />
    <div class="card-body">
        <h5 class="card-title">{{article_kicker}} - {{article_title}}</h5>
        <small class="card-subtitle">
            {{release_date_time}}
        </small>

        <hr />

        <div class="card-text">
            <div class="accordion border-bottom-0">
                <details class="accordion-item border-bottom-0">
                    <summary class="accordion-button rounded-top">
                            {{html article_description}}
                    </summary>
                    <div class="accordion-body border-bottom">
                        <p>{{html article_content_html}}</p>
                    </div>
                </details>
            </div>
        </div>

        <hr />

        <div id="button-row" class="row align-items-center">
            <button
                class="select-btn col btn btn-outline-success"
                onclick="openPromoteDialog()"
                title="Artikel promoten &mdash; Shortcut: Pfeil links"
            >
                <i class="bi bi-check2"></i>
            </button>
            <button
              id="tinder-demote-submit-button"
                class="select-btn col btn btn-outline-danger"
                hx-delete="/htmx/tinder?key={{article_key}}&date={{date}}&current_articles={{progress_current}}&max_articles={{progress_max}}"
                hx-target="main"
                hx-swap="outerHTML"
                title="Artikel demoten &mdash; Shortcut: Pfeil rechts"
            >
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    </div>
</div>

