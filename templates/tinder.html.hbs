{{#* inline "head"}}
  <style>
    main {
      display: flex;
      flex-direction: column;
      place-content: center;
      gap: 1.5em;
      padding: 0 5vw;

      section {
        max-width: 1024px;
        width: 90vw;
        margin: 1em auto;
      }

      #tinder-card {
        margin: 1em 0;
      }

      #button-row {
        display: flex;
        align-content: center;
        justify-content: start;
      }

      .select-btn {
        margin: 0 25px;
      }
    }

    /* Promote Dialog */
    dialog {
      border: 1px solid rgba(0, 0, 0, .2);
      border-radius: .3rem;
      outline: 0;

      form {
        position: relative;
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 500px;

        .modal-footer {
          gap: 1rem;
        }

        #category-input {
          width: 64em;
          max-width: 100%;
        }
      }
    }

    #drag-drop {
        position: absolute;
        height: 100%;
        width: 100%;
        margin: 0px;
        padding: 15px;

        display: flex;
        flex-direction: row;
        gap: 15px;

        div.drop-target {
            opacity: 25%;
            height: 100%;
            width: 100%;
        }
        div.drag-hover {
            opacity: 50%;
        }
        #drag-promote {
            background-color: var(--bs-success);
        }
        #drag-cancel {
            background-color: var(--bs-secondary);
        }
        #drag-demote {
            background-color: var(--bs-danger);
        }
    }
  </style>
{{/inline}}

{{#*inline "content" }}
  {{> components/home_button }}

  <div id="drag-drop" class="visually-hidden">
      <div id="drag-promote" class="drop-target"></div>
      <div id="drag-cancel" class="drop-target"></div>
      <div id="drag-demote" class="drop-target"></div>
  </div>

  {{> components/tinder_partial }}

  {{#if has_articles}}
  <script src="/assets/js/tinder.js"></script>
  {{/if}}
{{/inline}}
{{> base htmx=true}}
